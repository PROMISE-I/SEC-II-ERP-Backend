<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.nju.edu.erp.dao.promotion.LevelStrategyDao">
    <update id="updateOne">
        update promotion set discount = #{discount},
                             coupon = #{coupon},
                             begin = #{beginDate},
                             end = #{endDate}
        where level = #{level}
    </update>

    <select id="findAll" resultType="com.nju.edu.erp.model.po.promotion.LevelPromotionStrategyPO">
        select * from promotion
    </select>

    <select id="findByLevel" resultType="com.nju.edu.erp.model.po.promotion.LevelPromotionStrategyPO">
        select * from promotion
        where level = #{level}
    </select>
</mapper>