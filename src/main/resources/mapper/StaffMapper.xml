<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.nju.edu.erp.dao.StaffDao">

    <insert id="createStaff">
    insert into staff(`name`, gender, birthday, phone, position )
    values (#{name}, #{gender}, #{birthday}, #{phone}, #{position})
    </insert>

    <update id="updateOne">
        update staff set name = #{name},
                         gender = #{gender},
                         birthday = #{birthday},
                         phone = #{phone},
                         position = #{position},
                         balance = #{balance}
        where id = #{id}
    </update>

    <delete id="deleteOneById">
    delete from staff where id = #{id}
    </delete>
    <select id="findAll" resultType="com.nju.edu.erp.model.po.StaffPO">
        select * from staff
    </select>


    <resultMap id="StaffPO" type="com.nju.edu.erp.model.po.StaffPO">
        <result column="id" property="id"></result>
        <result column="name" property="name"></result>
        <result column="gender" property="gender"></result>
        <result column="birthday" property="birthday"></result>
        <result column="phone" property="phone"></result>
        <result column="position" property="position"></result>
        <result column="balance" property="balance"></result>
    </resultMap>
</mapper>